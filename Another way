// this is  4 step using 2D array
public class StudentMarks {
    public static void main(String[] args) {
        // 2D array to store marks
        int[][] marks = {
            {40, 20}, // Jane's marks: Math, Physics
            {70, 60}, // Jon's marks: Math, Physics
            {80, 75}  // Stewart's marks: Math, Physics
        };

        // Printing the marks
        System.out.println("Jane's Math marks: " + marks[0][0]);
        System.out.println("Jane's Physics marks: " + marks[0][1]);

        System.out.println("Jon's Math marks: " + marks[1][0]);
        System.out.println("Jon's Physics marks: " + marks[1][1]);

        System.out.println("Stewart's Math marks: " + marks[2][0]);
        System.out.println("Stewart's Physics marks: " + marks[2][1]);
    }
}

